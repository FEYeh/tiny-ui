{
  "compilerOptions": {
    "outDir": "./lib",
    "sourceMap": true,
    "module": "commonjs",
    "target": "es6",
    "lib": [
      "es7",
      "dom"
    ],
    "jsx": "react",
    "allowJs": true,
    "forceConsistentCasingInFileNames": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noImplicitAny": true,
    "importHelpers": true,
    "strictNullChecks": true,
    "suppressImplicitAnyIndexErrors": true,
    "noUnusedLocals": true
  },
  "include": [
    "src",
    "utils"
  ]
}
